{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "migration-plan.md", 
          "MIGRATION-README.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "service-worker.js",
          "register-sw.js",
          "version.js",
          "version-check.js",
          "index.html"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/modern"
    ],
    "globalMetadata": {
      "_appName": "XMPro",
      "_appTitle": "XMPro",
      "_enableSearch": true,
      "pdf": true
    },
  "fileMetadata": {
    },
    "globalMetadataFiles": [],
    "sitemap": {
      "baseUrl": "https://xmpro.github.io/public-docs-pages",
      "priority": 0.5,
      "changefreq": "daily"
    }
  }
}
