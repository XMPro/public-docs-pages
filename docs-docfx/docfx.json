{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "migration-plan.md", 
          "MIGRATION-README.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "docs/images/**",
          "docs/**/images/**",
          "docs/**/images/**/*.{png,jpg,jpeg,gif,svg}",
          "service-worker.js",
          "register-sw.js",
          "version.js",
          "version-check.js",
          "index.html"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "xmpro-template"
    ],
    "globalMetadata": {
      "_appFooter": "Copyright Â© 2025 XMPro. All rights reserved.",
      "_appName": "",
      "_appTitle": "XMPro",
      "_enableSearch": true,
      "_appLogoPath": "images/logo-light.avif",
      "_appFaviconPath": "images/favicon.png",
      "_disableBreadcrumb": false,
      "pdf": false
    },
  "fileMetadata": {
    },
    "globalMetadataFiles": [],
    "sitemap": {
      "baseUrl": "https://xmpro.github.io/public-docs-pages",
      "priority": 0.5,
      "changefreq": "daily"
    }
  }
}
